<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray0_fill_12_rect">

        <TextView
            android:id="@+id/tv_update_force_dialog_title"
            style="@style/body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:textColor="@color/gray700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="새로운 버전이 업데이트 되었어요!" />

        <TextView
            android:id="@+id/tv_update_force_dialog_content"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/gray600"
            app:layout_constraintEnd_toEndOf="@id/tv_update_force_dialog_title"
            app:layout_constraintStart_toStartOf="@id/tv_update_force_dialog_title"
            app:layout_constraintTop_toBottomOf="@id/tv_update_force_dialog_title"
            tools:text="안정적인 서비스 사용을 위해\n최신버전으로 업데이트해주세요." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_force_dialog_confirm"
            style="@style/body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_happyroutineblue_fill_8_rect"
            android:paddingHorizontal="65dp"
            android:paddingVertical="15dp"
            android:stateListAnimator="@null"
            android:text="@string/dialog_update_force_btn"
            android:textColor="@color/gray0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_force_dialog_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
