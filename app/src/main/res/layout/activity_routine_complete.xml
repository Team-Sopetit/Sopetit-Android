<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_routine_complete_title"
            style="@style/head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:textColor="@color/gray700"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="데일리 루틴을 완료했어요!" />

        <TextView
            android:id="@+id/tv_routine_complete_subtitle"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/shape_gray100_fill_8_rect"
            android:padding="10dp"
            android:textColor="@color/gray500"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_complete_title"
            tools:text="솜뭉치 1개 획득" />

        <ImageView
            android:id="@+id/iv_routine_complete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="-310dp"
            android:src="@drawable/ic_bear_handsup_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_routine_complete"
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:layout_marginTop="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_routine_complete_title"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/daily_complete_som" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
